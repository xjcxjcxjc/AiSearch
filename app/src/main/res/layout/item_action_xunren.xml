<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="5dp"
        android:background="@color/black"
        android:layout_width="330dp"
        android:layout_height="106dp"
        app:cardCornerRadius="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/action_xunren_left"
            app:cardCornerRadius="5dp"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            >

            <RelativeLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/action_xunren_headpicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/clipboard"
                    android:background="@color/black"/>


                <TextView
                    android:background="@color/half_transparent"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:id="@+id/action_xunren_losttime"
                    android:layout_marginTop="-15dp"
                    android:layout_below="@id/action_xunren_headpicture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="走失10个月"
                    android:textColor="@color/white"
                    android:textSize="10dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/action_xunren_name"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应槟鸿"
                />

            <TextView
                android:id="@+id/action_xunren_sex"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/action_xunren_name"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/text_gray1"
                />

            <TextView
                android:id="@+id/action_xunren_"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/action_xunren_sex"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/text_gray1"
                />
            <TextView
                android:id="@+id/action_xunren_age"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/action_xunren_"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28岁"
                android:textColor="@color/text_gray1"
                />

            <TextView
                android:id="@+id/action_xunren_birthplace"
                android:layout_below="@id/action_xunren_name"
                android:layout_marginTop="3dp"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生地点: 浙江省台州市"
                android:textColor="@color/text_gray1"
                />
            <TextView
                android:layout_below="@id/action_xunren_birthplace"
                android:id="@+id/action_xunren_lostplace"
                android:layout_marginTop="3dp"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="走失地点: 浙江省宁波市海曙区"
                android:textColor="@color/text_gray1"
                />
            <TextView
                android:id="@+id/action_xunren_lostdate"
                android:layout_below="@id/action_xunren_lostplace"
                android:layout_marginTop="3dp"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="走失日期: 2020年10月8日"
                android:textColor="@color/text_gray1"
                />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/action_xunren_addclue"
                android:layout_marginLeft="165dp"
                android:layout_below="@id/action_xunren_lostdate"
                android:layout_width="55dp"
                android:layout_height="18dp"
                android:text="提供线索"
                android:textSize="11dp"
                app:qmui_borderWidth="0dp"
                app:qmui_backgroundColor="#679cf8"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>