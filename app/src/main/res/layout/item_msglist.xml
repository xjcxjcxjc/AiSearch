<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemview">

    <TextView
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/msg_headcard"
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/msg_headcard"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/msg_head"
            android:scaleType="fitXY"
            android:src="@mipmap/clipboard"
            android:layout_width="50dp"
            android:layout_height="50dp"/>



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/msg_item_title"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@id/msg_headcard"
        android:layout_toRightOf="@+id/msg_headcard"
        android:text="蓝天救援队"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/msg_item_describe"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/msg_headcard"
        android:layout_below="@id/msg_item_title"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="欢迎大家加入蓝天大家庭，希望大家能够同心协力，一起为"
        android:textColor="@color/text_gray1"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/msg_item_time"
        android:layout_alignTop="@id/msg_item_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textSize="10dp"
        android:textColor="@color/text_gray1"
        android:text="12:20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/hospital_red"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/msg_item_describe"
        android:layout_width="15dp"
        android:layout_height="15dp">


        <TextView
            android:id="@+id/msg_item_newnub"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="6"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </androidx.cardview.widget.CardView>


</RelativeLayout>