<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        app:cardCornerRadius="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/action_list_left"
            app:cardCornerRadius="5dp"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            >

            <RelativeLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/action_list_headpicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/clipboard"
                    android:background="@color/black"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/half_transparent"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:id="@+id/action_list_persons"
                    android:layout_marginTop="-15dp"
                    android:layout_below="@id/action_list_headpicture"
                    >

                    <TextView
                        android:id="@+id/action_list_now"
                        android:text="25"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:text="/"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/action_list_need"
                        android:text="30"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="人"
                        android:textSize="10dp"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/action_list_name"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海曙老人救援行动"
                />

            <TextView
                android:id="@+id/action_list_time"
                android:layout_below="@id/action_list_name"
                android:layout_marginTop="3dp"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间: 2020年12月1日8:00——12月2日8:00"
                android:textColor="@color/text_gray1"
                />
            <TextView
                android:id="@+id/action_list_lostRange"
                android:layout_below="@id/action_list_time"
                android:layout_marginTop="3dp"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="范围: 宁波市海曙区学院路附件"
                android:textColor="@color/text_gray1"
                />

            <TextView
                android:id="@+id/action_list_distance"
                android:layout_below="@id/action_list_lostRange"
                android:layout_marginTop="3dp"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离: 3.3km"
                android:textColor="@color/text_gray1"
                />

            <TextView
                android:id="@+id/action_list_type"
                android:layout_below="@id/action_list_distance"
                android:layout_marginTop="3dp"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型: 普通寻人"
                android:textColor="@color/text_gray1"
                />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/action_list_join"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-5dp"
                android:layout_toEndOf="@id/action_list_type"
                android:layout_below="@id/action_list_distance"
                android:layout_width="57dp"
                android:layout_height="22dp"
                android:text="立即加入"
                android:textSize="11dp"
                app:qmui_borderWidth="0dp"
                app:qmui_backgroundColor="#679cf8"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>