<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:fitsSystemWindows="true"

    >


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/pubulish_add_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/iv_add_pic"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrows_return"
        android:layout_marginLeft="20dp"
        android:id="@+id/iv_return"
        android:layout_marginTop="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textSize="@dimen/chatSizeL"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_return"
        android:layout_marginRight="15dp"
        android:id="@+id/iv_share"
        android:textColor="#4a4a4a"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_add_pic"
        android:background="#fff"
        android:layout_marginTop="30dp"
        android:id="@+id/cv_1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="标题"
                android:gravity="center"
                android:id="@+id/et_title"
                android:background="@null"
                android:textSize="@dimen/title"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/et_title"
                android:id="@+id/view_line"
                android:background="#f2f2f2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:singleLine="false"
                android:background="@null"
                android:hint="正文"
                android:gravity="top|left"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:id="@+id/et_content"
                android:layout_below="@id/view_line"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/cv_1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yuewu_publish_kind"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_kind"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择分类"
                android:textSize="13sp"
                android:id="@+id/tv_kind"
                android:layout_toRightOf="@id/iv_kind"
                android:layout_marginLeft="10dp"
                android:textColor="#4a4a4a"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="经历"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_below="@id/iv_kind"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@drawable/selector_textcolor"
                android:background="@drawable/selector_btn"
                android:id="@+id/btn_kind_travelnotes" />


            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="故事"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="12dp"
                android:layout_below="@id/iv_kind"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn"
                android:id="@+id/btn_kind_gnosis"
                android:layout_toRightOf="@id/btn_kind_travelnotes" />
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="经验"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="12dp"
                android:layout_below="@id/iv_kind"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn"
                android:id="@+id/btn_kind_food"
                android:layout_toRightOf="@id/btn_kind_gnosis" />
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="好物"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="12dp"
                android:layout_below="@id/iv_kind"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn"
                android:id="@+id/btn_kind_poem"
                android:layout_toRightOf="@id/btn_kind_food" />
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="培训"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="12dp"
                android:layout_below="@id/iv_kind"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn"
                android:id="@+id/btn_kind_writ"
                android:layout_toRightOf="@id/btn_kind_poem" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/btn_kind_writ"
                android:background="#f2f2f2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/view_line2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yuew_publish_location"
                android:layout_below="@id/view_line2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/iv_ic_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取地点"
                android:layout_below="@id/view_line2"
                android:layout_alignLeft="@id/tv_kind"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_location"
                android:textColor="#4a4a4a"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浙江杭州"
                android:layout_below="@id/view_line2"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#4a4a4a"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrows_right"
                android:layout_below="@id/view_line2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:id="@+id/iv_location_right"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>