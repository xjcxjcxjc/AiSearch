<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.volunteer.home.LostPersonDetailsActivity"
    >

    <LinearLayout
        android:id="@+id/join_background"
        android:fitsSystemWindows="true"
        android:background="@drawable/action_backgroud2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/join_top"
            android:layout_marginTop="10dp"
            android:fitsSystemWindows="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/join_finish"
                    android:background="@null"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/finish"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="wrap_content">


<!--                <TextView-->
<!--                    android:id="@+id/pd_name"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="18dp"-->
<!--                    android:text="1111111"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->


            </LinearLayout>

            <ImageView
                android:id="@+id/share"
                android:layout_marginTop="4dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/share"
                android:layout_width="20dp"
                android:layout_height="20dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 走失人信息 -->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="95dp"
                    android:layout_height="110dp">

                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="95dp"
                        android:layout_height="110dp">

                        <ImageView
                            android:id="@+id/details2_headimg"
                            android:layout_width="95dp"
                            android:layout_height="110dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/clipboard"
                            android:background="@color/black"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="-6dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/pd_name"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:text="1111111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="体貌特征:"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/pd_feature"
                            android:layout_marginLeft="5dp"
                            android:text="秃头 左手有颗痣"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:text="发现时衣着:"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/pd_clothes"
                            android:layout_marginLeft="5dp"
                            android:text="红色夹克 黑色牛仔裤"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="发现时间:"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/detail_lost_time_detailed"
                            android:layout_marginLeft="5dp"
                            android:text="2020年12月20日 12:12"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:text="发现地点:"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/pd_lostplace"
                            android:layout_marginLeft="5dp"
                            android:text="浙江省宁波市海曙区高桥镇"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <!-- 下面信息 -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/background13"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">
            <TextView
                android:textSize="13dp"
                android:text="编号"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_gray1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/detail_lost_nub"
                android:textSize="13dp"
                android:text="111111111"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_gray1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/background13"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">
            <TextView
                android:textSize="13dp"
                android:text="身高"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_gray1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="13dp"
                android:text="170厘米"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_gray1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/background13"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">
            <TextView
                android:textSize="13dp"
                android:text="收容地点:"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_gray1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:textSize="13dp"
                android:text="海曙区收容站"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_gray1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/background13"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:textSize="13dp"
                android:text="收容所电话:"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_gray1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="13dp"
                android:text="0350-3338096"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_gray1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/background13"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:text="备注"
                android:background="@null"
                android:textColor="@color/text_gray1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/describe"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:text="&#12288;&#12288;老人是在我上班的时候走出去的，平时他的记性就不是很好，也没什么经常去的地方，不过他腿脚不是很好，应该不会走很远。希望大家帮帮忙，谢谢大家了"
                android:background="@null"
                android:textColor="@color/text_gray1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/perosondetails_addclue"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="-50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/title_red"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="快速联系"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>