<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/comment_headimg"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="15dp"
        android:layout_width="30dp"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/comment_img"
            android:src="@mipmap/headimg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/comment_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-2dp"
        android:layout_alignTop="@id/comment_headimg"
        android:layout_toRightOf="@id/comment_headimg"
        android:text="mjjh"
        android:textSize="13dp"
        android:textColor="@color/text_gray1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment_time"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/comment_name"
        android:layout_toRightOf="@id/comment_headimg"
        android:text="12.21"
        android:textSize="11dp"
        android:textColor="@color/text_gray1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView

        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/comment_name"
        android:src="@mipmap/heart1"
        android:layout_width="17dp"
        android:layout_height="17dp"/>
    <TextView
        android:id="@+id/comment_likenub"
        android:layout_marginRight="13dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/comment_name"
        android:text="22"
        android:textSize="11dp"
        android:textColor="@color/text_gray1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment_comment"
        android:layout_below="@id/comment_headimg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论论评论评论评论评论评论评论评论评论评论论评论评论评论评论评论评论评论评论评论"
        android:textSize="11dp"
        android:textColor="@color/text_gray1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>