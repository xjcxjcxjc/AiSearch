<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.family.mine.Searchctivity"
    android:background="@color/title_red"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:background="@color/backgroud_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/top"
        android:background="@color/title_red"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/finish"
                android:background="@null"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/finish"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

        </RelativeLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="14dp"
            android:layout_marginRight="25dp"
            android:textStyle="bold"
            android:text="寻人启事"
            android:textSize="@dimen/title"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/mine2_search_personmsg"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/top"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_below="@id/top"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:layout_width="350dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    >

                    <RelativeLayout
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:id="@+id/mine2_search_headimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@mipmap/clipboard"
                            android:background="@color/black"/>

                        <TextView
                            android:id="@+id/mine2_search_home"
                            android:background="@color/half_transparent"
                            android:gravity="center"
                            android:elevation="10dp"
                            android:layout_below="@id/mine2_search_headimg"
                            android:layout_marginTop="-14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="浙江台州"
                            android:textColor="@color/white"
                            android:textSize="10dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/mine2_search_name"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:text="应槟鸿"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/mine2_search_sex"
                            android:textColor="@color/text_gray1"
                            android:layout_marginLeft="8dp"
                            android:textSize="12dp"
                            android:text="男"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/text_gray1"
                            android:layout_marginLeft="3dp"
                            android:textSize="12dp"
                            android:text="/"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/mine2_search_age"
                            android:textColor="@color/text_gray1"
                            android:layout_marginLeft="3dp"
                            android:textSize="12dp"
                            android:text="28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/text_gray1"
                            android:textSize="12dp"
                            android:text="岁"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="走失时间:"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/mine2_search_losttime"
                            android:layout_marginLeft="5dp"
                            android:text="2020年12月1日"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="走失地点:"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/mine2_search_location"
                            android:layout_marginLeft="5dp"
                            android:text="宁波市海曙区学院路附近"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                            app:qmui_borderWidth="0.5dp"
                            app:qmui_radius="10dp"
                            app:qmui_borderColor="@color/title_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/mine2_search_lable1"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/text_gray1"
                                android:textSize="10dp"
                                android:text="秃头"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                            android:layout_marginLeft="4dp"
                            app:qmui_borderWidth="0.5dp"
                            app:qmui_radius="10dp"
                            app:qmui_borderColor="@color/title_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/mine2_search_lable2"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/text_gray1"
                                android:textSize="10dp"
                                android:text="阿兹海默症"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                            android:layout_marginLeft="4dp"
                            app:qmui_borderWidth="0.5dp"
                            app:qmui_radius="10dp"
                            app:qmui_borderColor="@color/title_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/mine2_search_lable3"
                                android:visibility="gone"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/text_gray1"
                                android:textSize="10dp"
                                android:text="阿兹海默症"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>


                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                            android:id="@+id/mine2_search_addclue"
                            android:textAlignment="center"
                            app:qmui_radius="10dp"
                            app:qmui_backgroundColor="@color/title_red"
                            app:qmui_borderWidth="0dp"
                            android:layout_marginRight="35dp"
                            android:textSize="10dp"
                            android:text="修改信息"
                            android:textColor="@color/white"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:layout_width="61dp"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView

                android:id="@+id/mine2_search_title"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:text="线索"
                android:layout_below="@id/mine2_search_personmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recycle"
                android:layout_width="match_parent"
                android:layout_height="500dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>