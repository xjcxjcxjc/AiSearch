            <ImageView
                android:id="@+id/share"
                android:layout_marginTop="4dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/share"
                android:layout_width="20dp"
                android:layout_height="20dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 走失人信息 -->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="95dp"
                    android:layout_height="110dp">

                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="95dp"
                        android:layout_height="110dp">

                        <ImageView
                            android:id="@+id/details2_headimg"
                            android:layout_width="95dp"
                            android:layout_height="110dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/clipboard"
                            android:background="@color/black"/>

                        <TextView
                            android:id="@+id/actioncenter_actionnub"
                            android:background="@color/half_transparent"
                            android:gravity="center"
                            android:layout_marginTop="-20dp"
                            android:layout_below="@id/details2_headimg"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="25人行动中"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="-6dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/pd_name"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:text="应槟鸿"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:text="男"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:text="/"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/pd_age"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:text="18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:text="岁"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="体貌特征:"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/pd_feature"
                            android:layout_marginLeft="5dp"
                            android:text="秃头 左手有颗痣"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:text="走失衣着:"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/pd_clothes"
                            android:layout_marginLeft="5dp"
                            android:text="红色夹克 黑色牛仔裤"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="走失时间:"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/detail_lost_time_detailed"
                            android:layout_marginLeft="5dp"
                            android:text="2020年12月20日 12:12"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="走失地点:"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/pd_lostplace"
                            android:layout_marginLeft="5dp"
                            android:text="浙江省宁波市海曙区高桥镇"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <!-- 下面信息 -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">
            <TextView
                android:textSize="13dp"
                android:text="出生日期"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_gray1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/birthday"
                android:textSize="13dp"
                android:text="1992.2.19"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_gray1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/background13"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
