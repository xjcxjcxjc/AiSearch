<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_clue_headcard"


        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp">

        <ImageView

            android:id="@+id/search_clue_head"
            android:scaleType="fitXY"
            android:src="@mipmap/clipboard"
            android:layout_width="40dp"
            android:layout_height="40dp"/>



    </androidx.cardview.widget.CardView>


    <TextView

        android:id="@+id/search_clue_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/search_clue_headcard"
        android:textSize="12dp"
        android:text="张三"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/search_clue_time"
        android:layout_alignTop="@id/search_clue_name"
        android:textSize="12dp"
        android:text="2020.12.21 12:11"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/search_clue_describe"
        android:layout_marginTop="5dp"
        android:layout_below="@id/search_clue_name"
        android:layout_alignLeft="@id/search_clue_name"
        android:textSize="12dp"
        android:text="线索线索线索线索线索线索线索线索线索线索线索线索线索线索线索线索"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@color/depart_backgroud"
        android:layout_marginTop="10dp"
        android:layout_below="@id/search_clue_describe"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>