<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/orgnization2_headcard"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/orgnization2_head"
            android:scaleType="fitXY"
            android:src="@mipmap/orgnization_head1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/orgnization2_name"
        android:text="蓝天救援队"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_toRightOf="@id/orgnization2_headcard"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView

        android:background="@color/backgroud_white2"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/orgnization2_headcard"
        android:layout_below="@id/orgnization2_name"
        android:textSize="11dp"
        android:text="高级认证"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/list_arr1"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@id/orgnization2_btn1"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/list_arr1"
        android:src="@mipmap/msg_list"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <ImageView
        android:id="@+id/list_arr2"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@id/orgnization2_btn2"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/list_arr1"
        android:src="@mipmap/msg_list"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <RelativeLayout
        android:id="@+id/orgnization2_btn1"
        android:layout_marginTop="4dp"
        android:layout_below="@id/orgnization2_headcard"
        android:layout_toRightOf="@id/list_arr1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="组织架构"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow4"
            android:layout_width="15dp"
            android:layout_height="15dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/orgnization2_btn2"
        android:layout_marginTop="4dp"
        android:layout_below="@id/orgnization2_btn1"
        android:layout_toRightOf="@id/list_arr1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="浙江-宁波-海曙区"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow4"
            android:layout_width="15dp"
            android:layout_height="15dp"/>


    </RelativeLayout>

</RelativeLayout>