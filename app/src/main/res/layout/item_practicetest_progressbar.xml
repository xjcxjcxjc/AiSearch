<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="30dp">

    <TextView
        android:id="@+id/practice_progressbar_bar"
        android:layout_centerVertical="true"
        android:background="@color/title_blue"
        android:layout_width="25dp"
        android:layout_height="3dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/practice_progressbar_nubcard"
        android:layout_toRightOf="@id/practice_progressbar_bar"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/title_blue"
        app:cardCornerRadius="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/practice_progressbar_nub"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>