<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/title_blue"
    >

    <RelativeLayout
        android:fitsSystemWindows="false"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#679cf8"
        android:id="@+id/tv_title"
        android:text="签到"
        android:textColor="#fff"
        android:textSize="@dimen/title"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/iv_return"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_sign"
        android:text="开始签到"
        android:textColor="#fff"
        android:textSize="@dimen/buttonSize"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_signin" />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f1f1f1"
        android:layout_below="@id/btn_signin"
        android:layout_marginTop="20dp"
        android:id="@+id/view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到情况"
        android:textSize="16dp"
        android:layout_below="@id/view"
        android:textColor="#555555"
        android:layout_alignLeft="@id/btn_signin"
        android:id="@+id/tv_sign"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="未签到优先"
        android:paddingLeft="10dp"
        android:textSize="14dp"
        android:textColor="#679cf8"
        android:layout_alignTop="@id/tv_sign"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_first"
        android:background="@drawable/shape_button_sign2" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@mipmap/triangle"
        android:rotation="90"
        android:layout_alignTop="@id/tv_first"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编号"
        android:textColor="#666666"
        android:layout_below="@id/tv_sign"
        android:layout_alignLeft="@id/tv_sign"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textColor="#666666"
        android:layout_below="@id/tv_sign"
        android:layout_alignLeft="@id/tv_sign"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交通方式 "
        android:textColor="#666666"
        android:layout_below="@id/tv_sign"
        android:layout_alignLeft="@id/tv_sign"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="装备情况"
        android:textColor="#666666"
        android:layout_below="@id/tv_sign"
        android:layout_alignLeft="@id/tv_sign"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态"
        android:textColor="#666666"
        android:layout_below="@id/tv_sign"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/tv_sign"
        android:layout_marginTop="40dp"
        android:id="@+id/rv_sign"/>





</RelativeLayout>