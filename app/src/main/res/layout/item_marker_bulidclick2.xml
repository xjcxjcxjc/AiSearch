<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/marker_backgroud"
        android:orientation="vertical"
        android:layout_width="132dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="地址:  海曙区秋实北路18号"
            android:textSize="10dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="电话:  0574-88080116"
            android:textSize="10dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/qmui_config_color_gray_9"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp" >

            <com.qmuiteam.qmui.layout.QMUIButton
                android:id="@+id/marker_navigate"
                android:background="@null"
                android:layout_marginLeft="3dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/plane"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="30dp"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="导航"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.qmuiteam.qmui.layout.QMUIButton
                android:id="@+id/marker_call"
                android:layout_toRightOf="@id/marker_navigate"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="81dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/call"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="100dp"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="拨打"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>