<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="170dp">

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@mipmap/background17"
        android:layout_width="300dp"
        android:layout_height="170dp">

        <TextView
            android:id="@+id/item_team_title"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="第一小队"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_team_name"
            android:layout_below="@id/item_team_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_gray1"
            android:textSize="15dp"
            android:text="小队长-蓝鹰: 13245234643"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/item_team_name2"
            android:layout_below="@id/item_team_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_gray1"
            android:textSize="15dp"
            android:text="队员-熊猫: 13454223791"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_team_name3"
            android:layout_below="@id/item_team_name2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_gray1"
            android:textSize="15dp"
            android:text="队员-熊猫: 13736234450"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/item_team_title"
            android:layout_toRightOf="@id/item_team_name"
            android:src="@mipmap/phone"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/item_team_name"
            android:layout_toRightOf="@id/item_team_name"
            android:src="@mipmap/phone"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/item_team_name2"
            android:layout_toRightOf="@id/item_team_name"
            android:src="@mipmap/phone"
            android:layout_width="20dp"
            android:layout_height="20dp"/>



    </RelativeLayout>



</FrameLayout>