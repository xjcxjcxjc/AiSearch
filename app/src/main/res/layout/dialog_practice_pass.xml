<?xml version="1.0" encoding="UTF-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:qmui_radius="10dp"
    android:layout_marginBottom="10dp"
    app:qmui_backgroundColor="@color/white">


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
        app:qmui_borderWidth="0dp"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <TextView
            android:id="@+id/lockdialog_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="恭喜您通过了考核，成功获得"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/lockdialog_passimg"
            android:src="@mipmap/passimg"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lockdialog_content"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lockdialog_content"
            android:text="水上求生"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="48dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/lockdialog_dismiss"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lockdialog_passimg"
            app:qmui_backgroundColor="@color/title_blue"
            app:qmui_borderWidth="0dp"
            app:qmui_radius="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="确定"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="30dp"/>

    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>


</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>