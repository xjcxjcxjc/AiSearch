<?xml version="1.0" encoding="UTF-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:qmui_radius="10dp"
    app:qmui_borderWidth="0dp"
    android:layout_marginBottom="10dp"
    app:qmui_backgroundColor="@color/white">


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
        app:qmui_borderWidth="0dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <TextView
            android:id="@+id/signup_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:text="学习更多专业知识后，可前往国家体育总局职业技能鉴定平台，报名游泳救生员考试"
            android:textSize="14dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/signup_dismiss"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_below="@id/signup_content"
            app:qmui_backgroundColor="@color/title_blue"
            app:qmui_borderWidth="0dp"
            app:qmui_radius="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:text="确定"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="30dp"/>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/signup_signup"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/signup_content"
            app:qmui_backgroundColor="@color/title_blue"
            app:qmui_borderWidth="0dp"
            app:qmui_radius="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:text="前往报名"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="30dp"/>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>


</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


