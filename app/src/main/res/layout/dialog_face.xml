<?xml version="1.0" encoding="UTF-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:qmui_radius="10dp"
    android:layout_marginBottom="10dp"
    app:qmui_backgroundColor="@color/white">


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
        app:qmui_borderWidth="0dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/lockdialog_content"

            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textAlignment="center"
            android:text="疑似其他走失老人，已将信息发送给其家属确认。"
            android:textSize="@dimen/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/lockdialog_dismiss"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lockdialog_content"
            app:qmui_backgroundColor="@color/title_blue"
            app:qmui_borderWidth="0dp"
            app:qmui_radius="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:text="确定"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="30dp"/>

    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>


</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
