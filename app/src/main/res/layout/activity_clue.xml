<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.volunteer.action.ClueActivity"
    android:background="@color/title_blue"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:background="@color/title_blue"
        android:layout_marginTop="10dp"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/finish"
                android:background="@null"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/finish"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

        </RelativeLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:text="线索"
            android:textSize="@dimen/title"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:background="@color/backgroud_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 第一条线索 -->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/hospital_red"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="匿名"
                    android:textSize="@dimen/headSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@mipmap/backgroud16"
                    android:layout_width="match_parent"
                    android:layout_height="205dp">

                    <TextView
                        android:id="@+id/clue_msg1"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="4dp"
                        android:textSize="@dimen/chatSize"
                        android:textColor="@color/text_gray1"
                        android:text="于早上8.15分上班的时候在宁波第一中学前面的十字路口看的有个老人向浙海大道走去"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/clue_msg1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/background13"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="16dp"
                        android:layout_below="@id/clue_msg1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/clue_item_imag"
                                app:cardCornerRadius="20dp"
                                app:cardBackgroundColor="@color/title_blue"
                                android:layout_width="40dp"
                                android:layout_height="40dp">

                                <TextView
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:text="利刃"
                                    android:textSize="@dimen/headSize"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_marginLeft="5dp"
                                android:textSize="@dimen/pictureSize"
                                android:textColor="@color/text_gray1"
                                android:text="经核查，未发现疑似老人"
                                android:layout_toRightOf="@id/clue_item_imag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="22dp"
                                android:layout_marginLeft="5dp"
                                android:textSize="@dimen/pictureSize"
                                android:textColor="@color/qmui_config_color_gray_6"
                                android:text="11:03"
                                android:layout_toRightOf="@id/clue_item_imag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/clue_item_imag2"
                                app:cardCornerRadius="20dp"
                                app:cardBackgroundColor="@color/title_blue"
                                android:layout_width="40dp"
                                android:layout_height="40dp">

                                <TextView
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:text="利刃"
                                    android:textSize="@dimen/headSize"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_marginLeft="5dp"
                                android:textSize="@dimen/pictureSize"
                                android:textColor="@color/text_gray1"
                                android:text="经核查，未发现疑似老人"
                                android:layout_toRightOf="@id/clue_item_imag2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="22dp"
                                android:layout_marginLeft="5dp"
                                android:textSize="@dimen/headSize"
                                android:textColor="@color/qmui_config_color_gray_6"
                                android:text="11:03"
                                android:layout_toRightOf="@id/clue_item_imag2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/clue_item_imag3"
                                app:cardCornerRadius="20dp"
                                app:cardBackgroundColor="@color/title_blue"
                                android:layout_width="40dp"
                                android:layout_height="40dp">

                                <TextView
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"
                                    android:textAlignment="center"
                                    android:text="利刃"
                                    android:textSize="@dimen/headSize"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_marginLeft="5dp"
                                android:textSize="@dimen/pictureSize"
                                android:textColor="@color/text_gray1"
                                android:text="经核查，未发现疑似老人"
                                android:layout_toRightOf="@id/clue_item_imag3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="22dp"
                                android:layout_marginLeft="5dp"
                                android:textSize="@dimen/pictureSize"
                                android:textColor="@color/qmui_config_color_gray_6"
                                android:text="11:03"
                                android:layout_toRightOf="@id/clue_item_imag3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="04月11日 10:21"
                        android:textColor="@color/text_gray1"
                        android:textSize="@dimen/pictureSize" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"/>

                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="50dp"
                        android:layout_height="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="5dp"
                                android:src="@mipmap/fankui"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"/>


                            <TextView
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:text="反馈"
                                android:textSize="@dimen/pictureSize"
                                android:textColor="@color/text_gray1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <!-- 第二条线索 -->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/hospital_red"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="匿名"
                    android:textSize="@dimen/headSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@mipmap/backgroud16"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <TextView
                        android:id="@+id/clue_msg2"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="4dp"
                        android:textSize="@dimen/chatSize"
                        android:textColor="@color/text_gray1"
                        android:text="在下午13.00左右在金钟小区附近看到过疑似老人,朝斗门北路方向走去"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/clue_msg2"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/background13"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>


                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textColor="@color/text_gray1"
                        android:textSize="@dimen/pictureSize"
                        android:text="04月11日 13:21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"/>

                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="50dp"
                        android:layout_height="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="5dp"
                                android:src="@mipmap/fankui"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"/>


                            <TextView
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:text="反馈"
                                android:textSize="@dimen/pictureSize"
                                android:id="@+id/tv_submit"
                                android:textColor="@color/text_gray1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>